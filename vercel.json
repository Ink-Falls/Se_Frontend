{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vitejs/plugin-react"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/static/$1"
    },
    { 
      "src": "/assets/(.*)", 
      "dest": "/assets/$1" 
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json)$)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "headers": {
        "cache-control": "s-maxage=1, stale-while-revalidate=2592000"
      },
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_REACT_APP_API_URL": "https://aralkademy-backend.onrender.com/api",
    "VITE_REACT_APP_RECAPTCHA_SITE_KEY": "6Ldv39cqAAAAAML6O41KNyqN_sXx7sIOA245Hc1N"
  }
}
